# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Js
[*.js]
indent_style = space
indent_size = 2

# Php
[*.php]
indent_style = tab
indent_size = 2

